<style>
    .jobListContainer {
    }

    .jobListContainer {
    }

    .job-card {
        padding: 5px;
        margin: 10px 0 10px 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        transition: transform 0.3s ease;
    }

        .job-card:hover {
            transform: scale(1.02);
        }

    .job-status.active {
        color: green;
    }

    .job-status.inactive {
        color: red;
    }

    .job-salary {
        font-weight: bold;
        color: #5cb85c;
    }

    .job-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .hiringEventContainer {
    }

    .title {
        font-weight: 700;
        font-size: 22px;
        text-transform: uppercase;
        color: #015add;
        border-bottom: 1px solid red;
        padding: 0;
        padding-bottom: 10px;
    }
</style>

<div class="mainContent">
    <div class="jobListContainer container mt-4">
        <h1 class="title">Cơ hội việc làm tại Tropicpet</h1>
        <div class="row">
            @foreach (var job in jobList)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card job-card">
                        <img src="@job.Image" class="card-img-top" alt="@job.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="job-title">@job.Title</h5>
                            <p class="card-text mb-1"><strong>Số lượng:</strong> @job.Amount</p>
                            <p class="card-text mb-1"><strong>Thời gian:</strong> @job.Time</p>
                            <p class="card-text mb-1 job-salary">@job.Salary</p>
                            <p class="card-text job-status ${jobStatusClass}">@job.Status</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
