<style>
    .route-banner {
        width: 100%;
        min-height: 340px;
        background-image: url(https://tropicpet.vn/wp-content/uploads/2024/03/membership-bgr.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center bottom;
        background-attachment: scroll;
    }

    .card {
        min-height: 350px;
    }
</style>

<div class="mainContent">
    <div class="route-banner container-fluid d-flex justify-content-center align-items-center">
        <h1 class="text-white fw-bolder text-uppercase">Tin tức</h1>
    </div>
    <div class="news-container container">
        <div class="row news-section mt-4">
            @foreach (var news in newsList)
            {
                <div class="col-12 col-lg-4">
                    <div class="card my-3">
                        <img src="@news.Image" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@news.Title</h5>
                            <p class="card-text">@news.Text</p>
                            <a href="#" class="btn btn-primary">@news.Tag</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 